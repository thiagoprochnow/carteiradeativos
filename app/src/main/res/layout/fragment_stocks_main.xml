<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <!-- Main view of stock content -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/stockRecyclerView"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/empty_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/no_items_to_display"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:visibility="gone"/>

    <!-- Floating Action Button to add a new stock to the portfolio -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabStocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:src="@android:drawable/ic_input_add"
        android:tint="#ffffff"
        app:backgroundTint="#67a6ed"/>
</FrameLayout>

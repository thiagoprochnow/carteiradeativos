<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/fixed_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    app:contentPadding="10dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="0dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/transparent"
    android:textSize="@dimen/fixed_text">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="@dimen/fixed_detail_width1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/transactionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonificação"
                    android:textSize="@dimen/stock_transaction_type"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/operationLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/operation"
                        android:textSize="@dimen/stock_detail"
                        android:ellipsize="end"
                        android:maxLines="1" />
                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="@dimen/stock_detail"
                        android:layout_marginLeft="@dimen/stock_detail_quantity_marginLeft"
                        android:ellipsize="end"
                        android:maxLines="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/stock_detail_width2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/stock_transaction_type"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/stock_detail"
                    android:ellipsize="end"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/stock_detail_quantity_marginLeft"
                android:gravity="right">
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/transactionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/stock_transaction_type"
                    android:text="dd/mm/YYYY"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/totalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/stock_detail"
                    android:ellipsize="end"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>
    <View android:background="@color/darkGray"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>

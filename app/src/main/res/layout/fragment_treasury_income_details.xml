<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/treasury_overview_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="3dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="3dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/header_title"
            android:paddingTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp">
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/incomeSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="DUMY4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/treasury_symbol" />
            </LinearLayout>
            <TextView
                android:fontFamily="sans-serif-light"
                android:id="@+id/exDate"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/treasury_symbol"
                android:text="03/05/2015"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/totalReceivedLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gross_income"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"/>
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/totalReceived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/taaLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tax_income"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"/>
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/liquidReceivedLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/net_income"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"/>
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/liquidReceived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@color/darkGray"
            android:layout_width = "match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>